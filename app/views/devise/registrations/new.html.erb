<section class="bg-white">
  <div class="lg:grid lg:min-h-screen lg:grid-cols-12">
    <aside class="relative block h-16 lg:order-last lg:col-span-5 lg:h-full xl:col-span-6">
      <img
        alt=""
        src="https://images.unsplash.com/photo-1605106702734-205df224ecce?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80"
        class="absolute inset-0 h-full w-full object-cover"
      />
    </aside>

    <main
      class="flex items-center justify-center px-8 py-8 sm:px-12 lg:col-span-7 lg:px-16 lg:py-12 xl:col-span-6"
    >
      <div class="max-w-xl lg:max-w-3xl">
        <h1 class="mt-6 text-2xl font-bold text-gray-900 sm:text-3xl md:text-4xl">
          Welcome to Freely 
        </h1>

        <p class="mt-4 leading-relaxed text-gray-500">
          Discover a world of remote opportunities. We connect talented professionals with innovative companies, breaking down geographical barriers. Join Freely today and redefine your work-life balance.
        </p>

        <% if resource.errors.any? %>
          <div class="mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
            <h2 class="text-lg font-semibold mb-2">
              <%= pluralize(resource.errors.count, "error") %> prohibited sign up:
            </h2>
            <ul class="list-disc list-inside">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 grid grid-cols-6 gap-6", data: { turbo: false } }) do |f| %>
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm" %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm" %>
            <% if @minimum_password_length %>
              <p class="mt-1 text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm" %>
          </div>

          <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
            <%= f.submit "Sign up", class: "inline-block shrink-0 rounded-md border border-blue-600 bg-blue-600 px-12 py-3 text-sm font-medium text-white transition hover:bg-transparent hover:text-blue-600 focus:outline-none focus:ring active:text-blue-500" %>

            <p class="mt-4 text-sm text-gray-500 sm:mt-0">
              Already have an account?
              <%= link_to "Log in", new_session_path(resource_name), class: "text-gray-700 underline" %>.
            </p>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</section>
