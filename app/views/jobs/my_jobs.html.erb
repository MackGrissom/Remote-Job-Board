<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8 text-orange-800">My Jobs</h1>

  <div class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-orange-700">Jobs I've Applied To</h2>
    <% if @applied_jobs.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @applied_jobs.each do |job_application| %>
          <div class="bg-white shadow-md rounded-lg overflow-hidden mb-4 transition duration-300 hover:shadow-lg">
            <%= link_to job_path(job_application.job), class: "block" do %>
              <div class="p-4 sm:p-6">
                <h3 class="text-lg sm:text-xl font-semibold text-orange-600 mb-2"><%= job_application.job.title %></h3>
                <p class="text-sm sm:text-base text-gray-600 mb-2"><%= job_application.job.company %></p>
                <p class="text-xs sm:text-sm text-gray-500 mb-1"><%= job_application.job.location %></p>
                <p class="text-xs sm:text-sm text-gray-500 mb-1"><%= job_application.job.job_type %></p>
                <p class="text-xs sm:text-sm text-orange-500 mb-2">
                  <%= job_application.job.formatted_salary rescue "Salary not available" %>
                </p>
                <p class="text-xs sm:text-sm text-gray-700 mb-4 line-clamp-3"><%= job_application.job.description %></p>
              </div>
            <% end %>
            <div class="px-4 sm:px-6 py-3 bg-orange-50 border-t border-orange-100">
              <span class="text-sm font-medium text-orange-600">Application Status: <%= job_application.status || 'Pending' %></span>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-600">You haven't applied to any jobs yet.</p>
    <% end %>
  </div>

  <div class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-orange-700">Bookmarked Jobs</h2>
    <% if @bookmarked_jobs.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @bookmarked_jobs.each do |job| %>
          <div class="bg-white shadow-md rounded-lg overflow-hidden mb-4 transition duration-300 hover:shadow-lg relative">
            <%= link_to job_path(job), class: "block" do %>
              <div class="p-4 sm:p-6">
                <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2"><%= job.title %></h3>
                <p class="text-sm sm:text-base text-gray-600 mb-2"><%= job.company %></p>
                <p class="text-xs sm:text-sm text-gray-500 mb-1"><%= job.location %></p>
                <p class="text-xs sm:text-sm text-gray-500 mb-1"><%= job.job_type %></p>
                <p class="text-xs sm:text-sm text-gray-500 mb-2">
                  <%= job.formatted_salary rescue "Salary not available" %>
                </p>
                <p class="text-xs sm:text-sm text-gray-700 mb-4 line-clamp-3"><%= job.description %></p>
              </div>
            <% end %>
            <div class="absolute top-2 right-2">
              <%= button_to unbookmark_job_path(job), method: :delete, class: "text-orange-500 hover:text-orange-600", title: "Unbookmark" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                </svg>
              <% end %>
            </div>
            <div class="px-4 sm:px-6 py-3 bg-gray-50 border-t border-gray-100">
              <%= link_to 'Apply Now', apply_job_path(job), class: "w-full block text-center px-4 py-2 text-sm font-medium text-white bg-orange-600 rounded-md hover:bg-orange-700 transition duration-150" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-600">You haven't bookmarked any jobs yet.</p>
    <% end %>
  </div>

  <div class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-orange-700">Jobs I've Posted</h2>
    <% if @posted_jobs.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @posted_jobs.each do |job| %>
          <div class="bg-white shadow-md rounded-lg overflow-hidden mb-4 transition duration-300 hover:shadow-lg">
            <%= link_to job_path(job), class: "block" do %>
              <div class="p-4 sm:p-6">
                <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2"><%= job.title %></h3>
                <p class="text-sm sm:text-base text-gray-600 mb-2"><%= job.company %></p>
                <p class="text-xs sm:text-sm text-gray-500 mb-1"><%= job.location %></p>
                <p class="text-xs sm:text-sm text-gray-500 mb-1"><%= job.job_type %></p>
                <p class="text-xs sm:text-sm text-gray-500 mb-2">
                  <%= job.formatted_salary rescue "Salary not available" %>
                </p>
                <p class="text-xs sm:text-sm text-gray-700 mb-4 line-clamp-3"><%= job.description %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-600">You haven't posted any jobs yet.</p>
    <% end %>
  </div>
</div>
