<% jobs.each do |job| %>
  <div class="bg-white shadow-md rounded-lg overflow-hidden mb-4">
    <div class="p-6">
      <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= job.title %></h3>
      <p class="text-gray-600 mb-4"><%= job.company %></p>
      <p class="text-sm text-gray-500 mb-2"><%= job.location %></p>
      <p class="text-sm text-gray-500 mb-2"><%= job.job_type %></p>
      <p class="text-sm text-gray-500 mb-4"><%= number_to_currency(job.salary) %></p>
      <p class="text-sm text-gray-700 mb-4 line-clamp-3"><%= job.description %></p>
      <%= link_to 'View Details', job_path(job), class: "inline-block px-4 py-2 text-sm font-medium text-blue-600 bg-blue-100 rounded-md hover:bg-blue-200 transition duration-150" %>
    </div>
  </div>
<% end %>

<div id="pagination" class="mt-4">
  <%= paginate jobs, remote: true %>
</div>