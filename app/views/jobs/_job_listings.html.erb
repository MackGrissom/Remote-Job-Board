<% if jobs.empty? %>
  <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-4" role="alert">
    <p>No jobs meet your search criteria. Please adjust filters to view additional jobs.</p>
  </div>
<% else %>
  <% jobs.each do |job| %>
    <div class="bg-white shadow-md rounded-lg p-6 mb-4">
      <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= job.title %></h3>
      <p class="text-gray-600 mb-4"><%= job.company %></p>
      <div class="flex items-center text-gray-700 mb-2">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <%= job.location %>
      </div>
      <div class="flex items-center text-gray-700 mb-2">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <%= job.job_type %>
      </div>
      <div class="flex items-center text-gray-700 mb-4">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        $<%= job.salary_min %> - $<%= job.salary_max %>
      </div>
      <div class="flex items-center text-gray-700 mb-4">
        <%= industry_emoji(job.industry) %>
        <span class="ml-2"><%= job.industry %></span>
      </div>
      <div class="flex justify-between items-center">
        <span class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded"><%= job.industry %></span>
        <div>
          <%= link_to "View Details", job_path(job), class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded mr-2" %>
          <%= link_to "Apply Now", job.apply_link, target: "_blank", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
