<% jobs.each do |job| %>
  <div class="job-card bg-white shadow-lg rounded-lg overflow-hidden mb-4" data-job-id="<%= job.id %>">
    <div class="p-4">
      <div class="flex justify-between items-start">
        <div>
          <h3 class="text-xl font-semibold text-gray-800"><%= job.title %></h3>
          <p class="text-gray-600"><%= job.company %></p>
          <p class="text-gray-500"><%= job.location %></p>
        </div>
        <div class="text-right">
          <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full uppercase font-semibold tracking-wide"><%= job.job_type %></span>
        </div>
      </div>
      <div class="flex justify-between items-center mt-4">
        <div>
          <span class="text-gray-600">$<%= number_with_delimiter(job.salary_min.to_i) %> - $<%= number_with_delimiter(job.salary_max.to_i) %></span>
        </div>
        <div>
          <span class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full uppercase font-semibold tracking-wide"><%= job.industry %></span>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-4 py-3 flex justify-between items-center">
      <span class="text-sm text-gray-600"><%= time_ago_in_words(job.created_at) %> ago</span>
      <a href="<%= job_path(job) %>" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded inline-block transition duration-150 ease-in-out">View Details</a>
    </div>
  </div>
<% end %>