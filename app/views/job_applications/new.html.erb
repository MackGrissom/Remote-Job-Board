<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto bg-white shadow-2xl rounded-lg overflow-hidden">
    <div class="bg-gradient-to-r from-blue-500 to-indigo-600 py-6 px-8">
      <h1 class="text-3xl font-extrabold text-white">Apply for <%= @job.title %></h1>
      <p class="mt-2 text-white opacity-80"><%= @job.company %> â€¢ <%= @job.location %></p>
    </div>

    <%= form_with(model: [@job, @job_application], local: true, class: "p-8 space-y-6") do |form| %>
      <% if @job_application.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6" role="alert">
          <p class="font-bold text-red-800">Please correct the following errors:</p>
          <ul class="list-disc list-inside text-red-700">
            <% @job_application.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <%= form.label :full_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :full_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <div>
          <%= form.label :phone, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.telephone_field :phone, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <div>
          <%= form.label :linkedin_url, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.url_field :linkedin_url, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>
      </div>

      <div>
        <%= form.label :resume, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.file_field :resume, accept: 'application/pdf', class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        <p class="mt-1 text-sm text-gray-500">Upload your resume (PDF only, max 5MB)</p>
      </div>

      <div>
        <%= form.label :cover_letter, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :cover_letter, rows: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="flex items-center justify-between pt-4">
        <%= form.submit "Submit Application", class: "px-6 py-3 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-150 ease-in-out" %>
        <%= link_to 'Back to Job', @job, class: "text-indigo-600 hover:text-indigo-800 hover:underline transition duration-150 ease-in-out" %>
      </div>
    <% end %>
  </div>
</div>
